
{% block title %}Modifier un livre{% endblock %}

{% block body %}
<div>
    <h2>Update Book</h2>

    <p><strong>Ref :</strong> {{ book.id }}</p>

    {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.publicationDate) }}
        {{ form_row(form.published) }}
        {{ form_row(form.category) }}
        {{ form_row(form.author) }}
        <button class="btn btn-success mt-3">Save</button>
    {{ form_end(form) }}

    <div>
        <a href="{{ path('book_list') }}">back to list</a>
    </div>
</div>
{% endblock %}
