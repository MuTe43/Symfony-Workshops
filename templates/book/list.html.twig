{% extends 'base.html.twig' %}

{% block title %}Book List{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="mb-3 text-center">ðŸ“š Book List</h2>

    <table class="table table-bordered table-striped text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Category</th>
                <th>Publication Date</th>
                <th>Published</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            {% for book in books %}
                <tr>
                    <td>{{ book.id }}</td>
                    <td>{{ book.title }}</td>
                    <td>{{ book.category }}</td>
                    <td>{{ book.publicationDate ? book.publicationDate|date('Y-m-d') : '' }}</td>
                    <td>
                        {% if book.published %}
                            <span class="badge bg-success">Yes</span>
                        {% else %}
                            <span class="badge bg-danger">No</span>
                        {% endif %}
                    </td>
                    <td>{{ book.author ? book.author.username : 'No author' }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-muted">No books found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="text-center mt-3">
        <a href="{{ path('book_add') }}" class="btn btn-primary">âž• Add New Book</a>
    </div>
</div>
{% endblock %}
