{% block title %}Liste des livres{% endblock %}

{% block body %}
<div>
    <h2>List of Books</h2>

    <form method="get" action="{{ path('book_search') }}" class="mb-3">
    <input type="text" name="ref" value="{{ search_ref ?? '' }}" placeholder="Rechercher par référence..." class="form-control d-inline-block w-auto">
    <button type="submit" class="btn btn-primary">Rechercher</button>
    </form>

    {% if books is empty %}
        <p>No Books found</p>
    {% else %}
        <table border="1">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Publication date</th>
                    <th>Published</th>
                    <th>Category</th>
                    <th>Author</th>
                    <th colspan="3" border="1">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for book in books %}
                    <tr>
                        <td>{{ book.title }}</td>
                        <td>{{ book.publicationDate ? book.publicationDate|date('F j, Y H:i') : '' }}</td>
                        <td>{{ book.published ? '1' : '0' }}</td>
                        <td>{{ book.category }}</td>
                        <td>{{ book.author ? book.author.username : '—' }}</td>
                        <td>
                            <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>
                            <a href="{{ path('book_delete', {'id': book.id}) }}"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('Voulez-vous vraiment supprimer ce livre ?');">
                                Delete
                            </a>
                            <a href="{{ path('book_detailsBook', {'id': book.id}) }}">
                                Show
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <p><strong>Number of published books :</strong> {{ publishedCount }}</p>
        <p><strong>Number of unpublished books :</strong> {{ unpublishedCount }}</p>
    {% endif %}

    <div>
        <a href="{{ path('book_add') }}">Create new</a>
    </div>
</div>
{% endblock %}
