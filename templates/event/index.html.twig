<h2>
	le tableau comporte
	{{authors| length}}
	auteurs
</h2>
{% if authors is empty or authors is not defined %}
	<h2>
		tableau non existant ou vide!
	</h2>

{% else %}
	<table border="1">
		<tr>
			<th>Id</th>
			<th>Username</th>
			<th>Email</th>
			<th colspan="3">Actions</th>
			{# <th>nb_books</th> #}
		</tr>
		{% for elt in authors %}
			<tr>
				<td>{{elt.id}}</td>
				{# <td><img src="{{elt.picture}}" alt="pas d'image"></td> #}
				<td>{{elt.username | upper}}</td>
				<td>{{elt.email}}</td>
				{# <td>{{elt.nb_books}}</td> #}
				<td>
					<a href="{{path("author_authorDetails",{'id': elt.id})}}">Details</a>
				</td>
				<td>
					<a href="{{path('author_updateAuthor', {'id': elt.id })}}">Edit</a>
				</td>
				<td>
					<a href="{{path('author_deleteAuthor', {'id': elt.id })}}">Delete</a>
				</td>
			</tr>

		{% endfor %}
	</table>

{% endif %}